<style>
    .last-period {
        margin-left: 50vh;
        margin-right: 50vh;
        margin-top: 20vh;
    }

    .start-tracking {
        margin-left: 50vh;
        margin-right: 50vh;
    }
</style>

@model string;

@{
    ViewData["Title"] = "Period Details";
}
<h2>Track Your Fertility Window</h2>
<hr />
<form asp-action="GetFertilityWindow" class="form-group">
    <div class="last-period">
        <label for="exampleInputEmail1">Last Period</label>
        <input name="lastPeriodStartDateString" type="date" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    </div>
 
    <div class="start-tracking">
        <input type="submit" value="Start Tracking" class="btn btn-primary" />
    </div>
</form>